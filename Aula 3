fun main() { 
    var time = "Palmeiras"
    var ano = "1914"
    var paulistas = "24"
    var brasileirão = "11"
    var copadobrasil = "4"
    var libertadores = "3"
    var tecnico = "Abel Ferreira"
    var rival1 = "Corinthians"
    var rival2 = "São Paulo"
    var rival3 = "Santos"
    
    println ("O melhor time do Brasil se chama $time, fundado em $ano, tem atualmente (2023),")
    println ("possui $paulistas Campeonatos Paulistas $brasileirão Campeonatos")
